task06_1_title = "Automobily a automobilová doprava";

task06_1_capt_a = "Výběr\nmýtného ";
task06_1_capt_b = "Navigace ";
task06_1_capt_c = "eCall ";
task06_1_desc_a = "Pomocí GNSS je možné sledovat trasy nákladních automobilů a z ujeté vzdálenosti následně vypočítávat výši mýtného. Díky tomuto řešení odpadá potřeba mýtných bran. Obdobně by bylo možné zavést mýtné i pro ostatní motorová vozidla. ";
task06_1_desc_b = "Dnes by si již řada řidičů nedokázala bez navigace cestování autem představit. Integrovaná navigace je součástí dnešních automobilů, stejně jako výběr z několika různých tras, kterými je možné se dostat na místo určení. ";
task06_1_desc_c = "Do vybraných automobilů se v současné době instaluje tzv. eCall. Toto zařízení umožňuje v případě nehody vyslat signál záchranným složkám s aktuální polohou vozu. ";

task06_2_title = "Železniční doprava";
task06_2_text = "V železniční dopravě slouží GNSS jako bezpečnostní prvek. Jelikož nejvíce nehod způsobuje lidský faktor, je snahou zabezpečit systémy automatickou kontrolou. Pokud se na stejné koleji objeví vlaky, které se mohou srazit, systém automaticky vydá signál k jejich zastavení. Dalším praktickým prvkem je sledování aktuální polohy vlaku, ze které je možné určit předpokládanou dobu zpoždění, případně sledovat přepravované zboží.";

task06_3_title = "Letecká doprava";
task06_3_text = "Bezpečnost je také hlavní náplní použití GNSS v letecké dopravě. Letadla pomocí GNSS zjišťují svou přesnou polohu (zeměpisné souřadnice a výšku). Ve spolupráci s radarem na letišti je rovněž možné navést automaticky letadlo na přistání. Události v letecké dopravě byly jednou z hlavních příčin, díky nimž došlo k uvolnění signálu GPS pro civilní použití. V roce 1983 po sestřelení civilního dopravního letadla tak učinil tehdejší prezident USA Ronald Reagan.";

task06_4_title = "Námořní doprava";
task06_4_text = "Námořní doprava má své vlastní systémy pro identifikaci plavidel (AIS - Automatic Identification Systems) a řízení lodní dopravy (Vessel Traffic Managment Systems). Satelitní navigace je i využívána pro sledování lodí při přepravě nákladů či při rybolovu. Díky možnosti rychlého určení polohy na otevřeném moři se používá i během záchranných akcí.";

task06_5_title = "Turistika";
task06_5_capt_a = "Geocaching ";
task06_5_capt_b = "Geolokační hry ";
task06_5_capt_c = "Turistika ";
task06_5_desc_a = "Jelikož byla z GPS odstraněna záměrná chyba, bylo možné začít určovat polohu s velmi velkou přesností – na jednotky metrů. Díky tomu mohla vzniknout hra na pomezí sportu a turistiky, jejímž cílem je na základě zeměpisných souřadnic najít cache - obvykle odolnou krabičku s logbookem (deníkem) a různými předměty, které do ní vkládají nálezci. ";
task06_5_desc_b = "Kromě geocachingu je možné vyzkoušet si celou řadu geolokačních her, které mohou turisty provést městem či krajinou, případně je lze využít během školní výuky. ";
task06_5_desc_c = "Satelitní navigace také změnila běžnou turistiku. Ve většině nových mobilních telefonů je satelitní navigace již integrovaná. Velkou výhodou je možnost stažení offline map. Ztracený turista tak díky navigaci snadno dorazí do cíle. Praktická je rovněž možnost určení své přesné polohy v případě nehody či zranění. ";

task06_6_title = "Ochrana životního prostředí";
task06_6_capt_a = "Ochrana\na sledování\nživočichů ";
task06_6_capt_b = "Mapování\nrostlin ";
task06_6_capt_c = "Sledování\npřírodních\nprocesů ";
task06_6_desc_a = "Satelitní navigaci lze využít při mapování živočichů, zejména pak chráněných druhů. Zajímavé je například sledování migračních tras stěhovavých ptáků a určování míst jejich zimovišť. ";
task06_6_desc_b = "Obdobně jako u živočichů je možné provádět přesné mapování rostlin v obtížně dostupných oblastech. ";
task06_6_desc_c = "Satelitní navigací lze studovat i neživou přírodu. Přístroje dosáhly takové přesnosti, že je možné zaznamenávat pohyby litosférických desek, ubývání ledovců, směry oceánského proudění a mnohé další jevy. ";

